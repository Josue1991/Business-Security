# Database
# SQLite (desarrollo)
# DATABASE_URL=sqlite:///./business_security.db

# PostgreSQL (producción/desarrollo)
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_bd
DATABASE_URL=postgresql://postgres:tu_password@localhost:5432/business_security

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Settings
APP_NAME="Business Security API"
APP_VERSION="1.0.0"
DEBUG=True

# CORS
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8100

# Login Security
MAX_LOGIN_ATTEMPTS=3
